    style.
      .color-palette {
      height: 35px;
      line-height: 35px;
      text-align: right;
      padding-right: .75rem;
      }
      .color-palette.disabled {
      text-align: center;
      padding-right: 0;
      display: block;
      }
      .color-palette-set {
      margin-bottom: 15px;
      }
      .color-palette span {
      display: none;
      font-size: 12px;
      }
      .color-palette:hover span {
      display: block;
      }
      .color-palette.disabled span {
      display: block;
      text-align: left;
      padding-left: .75rem;
      }
      .color-palette-box h4 {
      position: absolute;
      left: 1.25rem;
      margin-top: .75rem;
      color: rgba(255, 255, 255, 0.8);
      font-size: 12px;
      display: block;
      z-index: 7;
      }
  body(class='layout-top-nav')
    div(class='wrapper')
      nav(class='main-header')
      div(class='content-wrapper')
